{
  "name": "ting",
  "version": "2.4.2",
  "description": "Opinionated HTML Sanitizer for Node.js",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "author": "Mgen (https://github.com/mgenware)",
  "homepage": "https://github.com/mgenware/ting",
  "bugs": "https://github.com/mgenware/ting/issues",
  "keywords": [
    "html sanitizer",
    "sanitize html"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mgenware/ting.git"
  },
  "license": "MIT",
  "scripts": {
    "test": "yarn run clean && yarn run compile && yarn run lint && yarn run t",
    "t": "jest",
    "build": "yarn test",
    "compile": "tsc",
    "dev": "yarn run clean && tsc -w",
    "prepublishOnly": "yarn run test",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "clean:dist": "rimraf dist",
    "clean": "npm run clean:dist"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "moduleFileExtensions": [
      "js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.6",
    "jest": "^24.5.0",
    "rimraf": "^2.6.3",
    "tslint": "^5.14.0",
    "typescript": "^3.3.4000"
  },
  "dependencies": {
    "@types/sanitize-html": "^1.18.2",
    "sanitize-html": "^1.20.0"
  }
